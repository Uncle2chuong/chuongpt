@model WebsiteBanHang.Context.Category

@{
    ViewBag.Title = "Delete";
}

<p>á</p>
<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 style="text-align:center">Xóa Danh Mục</h2>

                            <h3>Bạn có muốn xóa?</h3>
                            <div>

                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        Tên
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>

                                    <dt>
                                        Hình
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Avatar)
                                    </dd>



                                    <dt>
                                        Hiển trên web
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.ShowOnHomePage)
                                    </dd>

                                    <dt>
                                        Thứ tự hiển thị
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.DisplayOrder)
                                    </dd>

                                    @*<dt>
                                            @Html.DisplayNameFor(model => model.Deleted)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Deleted)
                                        </dd>*@

                                    <dt>
                                        Ngày giờ thêm
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.CreatedOnUtc)
                                    </dd>

                                    @*<dt>
                                            @Html.DisplayNameFor(model => model.UpdateOnUtc)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.UpdateOnUtc)
                                        </dd>*@

                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Xóa" class="btn btn-default" /> |
                                        @Html.ActionLink("Quay lại", "Index")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>