@model WebsiteBanHang.Context.Brand

@{
    ViewBag.Title = "Details";
}
<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 style="text-align:center">Chi Tiết Thương Hiệu</h2>
                            <div>

                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        Tên
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>

                                    <dt>
                                        Hình
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Avatar)
                                    </dd>



                                    <dt>
                                        Hiện trên trang wed
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.ShowOnHomePage)
                                    </dd>



                                    <dt>
                                        @Html.DisplayNameFor(model => model.CreatedOnUtc)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.CreatedOnUtc)
                                    </dd>



                                </dl>
                            </div>
                            <p>
                                @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }) |
                                @Html.ActionLink("Quay về trang chủ", "Index")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>