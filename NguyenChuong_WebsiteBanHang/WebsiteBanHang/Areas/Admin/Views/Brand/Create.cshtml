@model WebsiteBanHang.Context.Brand

@{
    ViewBag.Title = "Create";
}
<p>á</p>
<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 style="text-align:center">Thêm Thương Hiệu</h2>

                            @using (Html.BeginForm("Create", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <h6 class="control-label col-md-2">Tên</h6>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h6 class="control-label col-md-2">Chọn hình</h6>
                                        <div class="col-md-10">
                                            <input type="file" name="ImageUpLoad" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <h6 class="control-label col-md-2">Hiện trên trang chủ</h6>
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.ShowOnHomePage)
                                                @Html.ValidationMessageFor(model => model.ShowOnHomePage, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Thêm" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                                @Html.ActionLink("Quay lại", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>